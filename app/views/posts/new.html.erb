<h1>Share something awesome!</h1>
<div class="row-fluid">
  <div class="span6">
  <h4>Model backed form</h4>
    <%= form_for @post, url: {action: "create"} do |f| %>
      <%= f.label :title, "Post Title" %>
      <%= f.text_field :title %><br>
      <%= f.label :url, "URL" %>
      <%= f.text_field :url %><br>
      <%= f.label :description, "What's your post about?" %>
      <%= f.text_area :description, :size => "10x10" %><br>

      <%= f.fields_for :categorizations do |builder| %>
          <%= builder.label :category_id, "Post Category" %>
          <%= builder.select(:category_id, @select) %>
      <% end %>
      <br>
      <%= f.submit %>
    <% end %>
  </div>

  <div class="span6">
  <h4>Non nested form</h4>
    <%= form_for @post, url: {action: "create"} do |f| %>
      <%= f.label :title, "Post Title" %>
      <%= f.text_field :title %><br>
      <%= f.label :url, "URL" %>
      <%= f.text_field :url %><br>
      <%= f.label :description, "What's your post about?" %>
      <%= f.text_area :description, :size => "10x10" %><br>

      <%= f.label :category_ids, "Post Category" %>
      <%= f.select :category_ids, @select, {}, {multiple: 'multiple'} %>
      <br>
      <%= f.submit %>
    <% end %>
  </div>

