<h1>Edit "<%= @post.title %>"</h1>
<div class="row-fluid">
  <div class="span6">
  <h4>Model backed form</h4>
    <%= form_for @post, url: {action: "update"} do |f| %>
      <%= f.label :title, "Post Title" %>
      <%= f.text_field :title %><br>
      <%= f.label :url, "URL" %>
      <%= f.text_field :url %><br>
      <%= f.label :description, "What's your post about?" %>
      <%= f.text_area :description, :size => "10x10" %><br>
      <%= f.submit %>
    <% end %>
  </div>
</div>