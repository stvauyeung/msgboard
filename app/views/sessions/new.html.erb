<div class="row-fluid">
<h1>Login</h1><br>
  <%= form_tag '/login', :method => 'post' do %>
    <%= label_tag :username %>
    <%= text_field_tag :username, params[:username] %><br>
    <%= label_tag :password %>
    <%= password_field_tag :password %><br>
    <%= submit_tag 'Login' %>
  <% end %>
  <p>Not a member? <%= link_to "Register here", register_path %></p>
</div>